<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach (var category in ViewBag.lsCategory)
                {
                    <div class="col-lg-3">
                        <a asp-controller="Product" asp-action="FiltterCate" asp-route-IdCate="@category.IdCate">
                            <div class="categories__item set-bg" data-setbg="assests/img/categories/cat-1.jpg">
                                <h5 class="category-name">@category.NameCate</h5>
                            </div>
                        </a>

                    </div>
                }
                
            </div>
        </div>
    </div>
</section>