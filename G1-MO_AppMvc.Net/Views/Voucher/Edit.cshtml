@model App.Model.Voucher

@{
    ViewData["Title"] = "Edit";
    Layout = "Admin/_AdminLayout";
}



<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet"
    type="text/css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>


<style>
    /* Your custom styles here */
    .card-default {
        color: #333;
        background: linear-gradient(#fff, #ebebeb) repeat scroll 0 0 transparent;
        font-weight: 600;
        border-radius: 6px;
    }
</style>


<form asp-action="Edit" method="post">
    <div class="container">
        <div id="accordion">
            <div class="card card-default">
                <div class="card-header ">
                    <h4 class="card-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                            <i class="glyphicon glyphicon-search text-gold"></i>
                            <b>UPDATE VOUCHERS</b>
                        </a>
                    </h4>
                </div>
                <div id="collapse1" class="collapse show">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">Voucher ID</span>
                                        </div>
                                        <input class="form-control" type="text" asp-for="VoucherId" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" asp-for="UsageStatus"></label>
                                    <select class="form-control" asp-for="UsageStatus">
                                        <option value="1">Enabled</option>
                                        <option value="0">Disable</option>
                                    </select>
                           
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" asp-for="PromotionName"></label>
                                    <input type="text" class="form-control" asp-for="PromotionName" />
                                    <span class="text-danger" asp-validation-for="PromotionName"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" asp-for="PromotionCode"></label>
                                    <input type="text" class="form-control" asp-for="PromotionCode" />
                                    <span class="text-danger" asp-validation-for="PromotionCode"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label" asp-for="DiscountType"></label>
                                        <select class="form-control" id="discountType" asp-for="DiscountType">
                                            <option value="1">Percentage Discount(%)</option>
                                            <option value="0">Amount Discount</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label" asp-for="DiscountAmount"></label>
                                        <input type="text" class="form-control" asp-for="DiscountAmount" />
                                        <span class="text-danger" asp-validation-for="DiscountAmount"></span>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="control-label" asp-for="Quantity"></label>
                                        <input class="form-control" type="text" asp-for="Quantity" />
                                        <span class="text-danger" asp-validation-for="Quantity"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row" id="percentDiscountFields">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label" asp-for="MaxiValue"></label>
                                        <small>(Maximum reduced value of the order)</small>
                                        <input type="text" class="form-control" id="maxValue" asp-for="MaxiValue"/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label" asp-for="MinValue"></label>
                                        <small>(Minimum value of the order)</small>
                                        <input type="text" class="form-control" id="minValue" asp-for="MinValue"/>
                                    </div>
                                </div>
                            </div>
                            <div class="row" id="amountDiscountField" style="display: none;">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label" asp-for="MinValue"></label>
                                        <small>(Minimum value of the order)</small>
                                        <input type="text" class="form-control" id="discountAmount"  asp-for="MinValue"/>
                                    </div>
                                </div>
                            </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" asp-for="StartDate"></label>
                                    <div class="input-group date">
                                        <input class="form-control" type="date" asp-for="StartDate" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" asp-for="EndDate"></label>
                                    <div class="input-group date">
                                        <input class="form-control" type="date" asp-for="EndDate" />
                                    </div>
                                    <span class="text-danger" asp-validation-for="EndDate"></span>
                                </div>
                            </div>
                            @* trường ẩn DeleteStatus để khi cập nhật không set giá trị nó là null *@
                            <input type="hidden" asp-for="DeleteStatus" />

                        </div>

                        <br>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="pull-right">
                                    <a asp-action="Index" class="btn btn-warning btn-lg" Zzid="btnToTop"><i
                                            class="fa fa-arrow-left"></i> Back</a>
                                    <button type="submit" class="btn btn-success btn-lg" id="btnSubmit"
                                        value="Submit"><i class="fa fa-save"></i> Save</button>

                                </div>
                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </div>

    </div>
</form>


<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
       $(document).ready(function () {
            $("#discountType").change(function () {
                if ($(this).val() === "1") {
                    $("#percentDiscountFields").show();
                    $("#amountDiscountField").hide();
                } else {
                    $("#percentDiscountFields").hide();
                    $("#amountDiscountField").show();
                }
            });
        });
    </script>
}