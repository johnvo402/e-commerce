@model App.Model.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6"">
            <h4>Account</h4>
            <hr />
            <dl class="row">
                
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                @if (Model.Status == 1)
                {
                    <dd class="col-sm-10"> Activity </dd>
                }
                else if (Model.Status == 0)
                {
                    <dd class="col-sm-10"> Disabled </dd>
                }
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                 <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HomeAdress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HomeAdress)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                @if (Model.Gender == 1)
                {
                    <dd class="col-sm-10"> Male </dd>
                }
                else if (Model.Gender == 0)
                {
                    <dd class="col-sm-10"> Female </dd>
                }
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateCreate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateCreate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.LastLogin)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LastLogin)
                </dd>
            </dl>
        </div>
        <div class="col-md-4 d-flex justify-content-around align-content-around">

            <div class="text-center">
                <div class="avatar-profile" style="max-height: 150px;max-width: 150px;">
                    @{
                        <img style="width: 100%;" src="/images/icons/@Html.DisplayFor(model => model.Avt)" alt="Avatar" class="rounded-circle img-fluid">
                    }
                   
                </div>
               
            </div>


        </div>
        <div>
            @Html.ActionLink("Edit", "AddRole", "ManageBuyer", new { id = Model.Id }, new { @class = "btn btn-rounded btn-dark" })|
            @Html.ActionLink("Back to list", "IndexBuyer", "ManageBuyer",new {}, new { @class = "btn btn-rounded btn-primary" })
        </div>
    </div>
</div>


