@model AddUserRoleModel
@{
    ViewData["Title"] = "Gán role";
    Layout = "Admin/_AdminLayout";
}

<h4>User: @Model.user.UserName</h4>
<partial name="_StatusMessage" />

<!---->
<div class="container">
    
        <form id="profile-form" method="post">
        <div class="row">
            <div class="col-sm-6">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                
                <div class="form-group">
                    <label asp-for="FullName"></label>
                    <input asp-for="FullName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="1">Male</option>
                        <option value="0">Female</option>
                    </select>

                </div>


            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label asp-for="UserEmail"></label>
                    <input asp-for="UserEmail" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="HomeAdress"></label>
                    <textarea asp-for="HomeAdress" class="form-control"></textarea>
                    <span asp-validation-for="HomeAdress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate"></label>
                    <input asp-for="BirthDate" class="form-control" type="date" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoleNames"></label>
                    <select asp-for="RoleNames" class="form-control">
                        @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.allRoles)
                        {
                            if (item.Text != "Administrator")
                            {
                                <option value="@item.Text">@item.Text</option>
                            }
                            
                        }
                    </select>

                    <span asp-validation-for="RoleNames" class="text-danger"></span>
                </div>
                <button id="update-profile-button" type="submit" class="btn btn-primary">Lưu dữ liệu</button>
            </div>

            
        </div>
        </form>
    </div>


@section Scripts {



    <partial name="_ValidationScriptsPartial" />
}
