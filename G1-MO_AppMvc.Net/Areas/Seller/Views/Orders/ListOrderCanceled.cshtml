@{
	ViewData["Title"] = "ListOrderCanceled";
}

<h1>ListOrderCanceled</h1>

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@model IEnumerable<App.Model.Order>


<div class="tab-pane fade show active" id="custom-tabs-one-home" role="tabpanel" aria-labelledby="custom-tabs-one-home-tab">
	<div class="card-body table-responsive p-0">
		@if (Model != null && Model.Where(x => x.OrderStatus == 0).Count() > 0)
		{
			<table class="table table-striped table-bordered">
				<thead class="thead-dark">
					<tr>
						<th>ID</th>
						<th>Date</th>
						<th>Payment method</th>
						<th>In progress</th>
						<th>Total</th>
						<th>Detail</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.Where(x => x.OrderStatus == 0))
					{
						<tr>
							<td>@item.IdOrder</td>
							<td>@item.OrderDate</td>
							<td>@item.PaymentMethodId</td>
							<td>Canceled</td>
							<td>@item.OrderTotal</td>
							<td>
								<a asp-controller="UserOrder" asp-action="OrderDetails" asp-route-id="@item.IdOrder" class="btn btn-primary">Detail</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		}
		else
		{
			<tr>
				<td>
					No orders have been canceled
				</td>
			</tr>
		}

	</div>
</div>
